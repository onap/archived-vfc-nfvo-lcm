            </copy>
                        <copy>
                                <from>
                    <literal></literal>
                </from>
                                <to variable="createVNFResponse" />
            </copy>
                        <copy>
                                <from>
                    <literal></literal>
                </from>
                                <to variable="query_vnf_nslcmResponse" />
            </copy>
                        <copy>
                                <from>
                    <literal></literal>
                </from>
                                <to variable="createSFCResponse" />
            </copy>
                        <copy>
                                <from>
                    <literal></literal>
                </from>
                                <to variable="querySFCResponse" />
            </copy>
                    </assign>
        
